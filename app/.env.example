# Database Configuration
# SQLite database file path (use absolute path for WSL2 compatibility)
DATABASE_URL="file:./prisma/dev.db"

# JWT Secret for authentication
# IMPORTANT: Change this to a strong random string in production
JWT_SECRET=your-secret-key-change-this-in-production

# Server Port
PORT=3001

# Force sync all market instruments on server startup
# - true: Clears all existing instruments and performs full sync on every startup
# - false: Only performs initial sync if database is empty (recommended)
FORCE_SYNC_ON_STARTUP=false

# HTTP Request Retry Configuration
# Maximum number of retries for failed HTTP requests (default: 3)
HTTP_MAX_RETRIES=3
# Initial delay before first retry in milliseconds (default: 1000)
HTTP_INITIAL_DELAY_MS=1000
# Maximum delay between retries in milliseconds (default: 10000)
HTTP_MAX_DELAY_MS=10000
# Exponential backoff multiplier (default: 2)
HTTP_BACKOFF_MULTIPLIER=2
# Request timeout in milliseconds (default: 30000)
HTTP_TIMEOUT_MS=30000
